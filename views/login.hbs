<!--log in start here-->
<div class="login">
    <div class="container">
        <div class="login-main">
            <h1>Login</h1>
            <div class="col-md-6 login-left">
                <h2>Existing User</h2>
                <form action="#" method="post">
                    <input type="email" name="email" placeholder="Email" required="">
                    <input style="margin-bottom: 3em;" type="password" name="password" placeholder="Password"
                        required="">

                    {{#if wrongLogin}}
                    <h4 style="color:red">Wrong password or email</h4>
                    {{/if}}
                    {{#if bannedLogin}}
                    <h4 style="color:red">Account is being banned</h4>
                    {{/if}}
                    <input type="submit" value="Login">
                </form>
            </div>
            <div class="col-md-6 login-right">
                <h3>New User?</h3>
                <p>If this is your first time buying in this website. Please register an account to receive our customer
                    policy</p>
                <a href="/login/signup" class="login-btn">Create an Account </a>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<!--log in end here-->