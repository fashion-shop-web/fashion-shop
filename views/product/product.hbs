<!--single start here-->
<div class="single">
    <div class="container">
        <div class="single-main">
            <div class="single-top-main">
                <div class="col-md-5 single-top">
                    <div class="flexslider">
                        <ul class="slides">
                            {{#each detail.image}}
                            <li data-thumb={{this}} style="margin-bottom: 2em;">
                                <div class="thumb-image"> <img src={{this.secure_url}} data-imagezoom="true"
                                        class="img-responsive"> </div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
                <div class="col-md-7 single-top-left simpleCart_shelfItem">
                    <h1 style="text-transform: uppercase; font-size: 4em;">{{detail.name}}</h1>
                    <h2>Catergories: {{detail.category}}</h2>
                    <h2>Brand: {{detail.brand}}</h2>
                    <h2>Gender: {{detail.gender}}</h2>
                    <h1 style="margin-top: 2em;">Description:</h1>
                    {{#each detail.description}}
                    <p>- {{this}}</p>
                    {{/each}}


                    {{#if detail.sale}}
                    <h2 class="item_price" style="margin-top: 2em; text-decoration:line-through">Price:
                        {{detail.price}}$</h2>
                    <h3>Sale: {{detail.sale}}$</h3>
                    {{else}}
                    <h2 class="item_price" style="margin-top: 2em;">Price: {{detail.price}}$</h2>
                    {{/if}}
                    <ul class="bann-btns">
                        <li><a href="#" class="item_add">Add To Cart</a></li>
                    </ul>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="singlepage-product">
                <div class="related-product">You may also like:</div>
                {{#each relate}}
                <div class="col-md-3 home-grid">
                    <div class="home-product-main">
                        <div class="home-product-top">
                            <a href={{this.slug}}><img src={{this.image.[0].secure_url}} alt=""
                                    class="img-responsive zoom-img"></a>
                        </div>
                        <div class="home-product-bottom">
                            <h3 style="height: 2.5em; text-transform: uppercase;"><a
                                    href={{this.slug}}>{{this.name}}</a>
                            </h3>
                            <p style="color: black; font-size: 1.3em">Price: {{this.price}}$</p>
                        </div>
                        <div class="srch">
                            <span>{{this.sale}}</span>
                        </div>
                    </div>
                </div>
                {{/each}}
                <div class="clearfix"> </div>

                <div class="comment-block">
                    <div class="comment-input">
                        <div class="comment-title">Comments ({{len}})</div>
                        {{#if user}}
                        <div id="comment-user-id" hidden name={{user._id}}></div>
                        <div id="comment-user-lastName" hidden name={{user.lastName}}></div>
                        <div id="comment-product-id" hidden name={{detail._id}}></div>
                        <textarea placeholder="Leave your comment here..." class="comment-textarea"
                            onkeyup="requestCommentAPI(event)"></textarea>
                        <div id="comment-error" style="color: red;"></div>
                        {{/if}}

                    </div>
                    <ul class="comment-list">
                        {{#each comments}}
                        <li class="comment-section">
                            <div class="comment-user-name">{{this.lastName}}<i class="comment-user-time">(
                                    {{this.date}} )</i></div>
                            <div class="comment-user-content">{{this.content}}</div>
                        </li>
                        {{/each}}
                    </ul>
                    <br>

                    {{#if comments}}
                    <div class="pagination col-md-12">
                        <ul class="page-list">
                            <li class="page"><a href="#">&lt;&lt;</a></li>
                            {{#each pages}}
                            <li class=" page"><a href="?page={{this}}">{{this}}</a></li>
                            {{/each}}
                            <li class="page"><a href="#">&gt;&gt;</a></li>
                        </ul>
                    </div>
                    <div id="current-page" style="display: none;" name={{currentPage}}></div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
<!--single end here-->