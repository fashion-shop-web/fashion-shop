<!--product start here-->
<div class="product">
    <div class="container">
        <div class="product-main">
            <div class=" product-menu-bar">
                <div class="col-md-3 prdt-right">
                    <div class="w_sidebar">
                        <section class="sky-form">
                            <h1>Categories</h1>
                            <div class="row1 scroll-pane">
                                <div class="col col-4">
                                    <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i></i>All
                                        Accessories</label>
                                </div>
                                <div class="col col-4">
                                    <label class="checkbox"><input type="checkbox"
                                            name="checkbox"><i></i>Handbag</label>
                                    <label class="checkbox"><input type="checkbox"
                                            name="checkbox"><i></i>Bracelet</label>
                                    <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Wrist
                                        watch</label>
                                </div>
                            </div>
                        </section>
                        <section class="sky-form">
                            <h2>Brand</h2>
                            <div class="row1 row2 scroll-pane">
                                <div class="col col-4">
                                    <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i></i>All
                                        Brands</label>
                                </div>
                                <div class="col col-4">
                                    <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Louis
                                        Vutton</label>
                                    <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Rolex</label>
                                    <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Chanel</label>
                                    <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Gucci</label>
                                    <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Omega</label>
                                    <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Hermes</label>
                                    <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Dior</label>
                                    <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Prada</label>
                                    <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>YSL</label>
                                    <label class="checkbox"><input type="checkbox"
                                            name="checkbox"><i></i>Citizen</label>
                                    <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Michael
                                        Kors</label>
                                    <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Fendi</label>
                                </div>
                            </div>
                        </section>
                        <section class="sky-form">
                            <h4>discount</h4>
                            <div class="row1 row2 scroll-pane">
                                <div class="col col-4">
                                    <label class="radio"><input type="radio" name="radio"><i></i>50 % and
                                        above</label>
                                    <label class="radio"><input type="radio" name="radio"><i></i>40 % and
                                        above</label>
                                </div>
                                <div class="col col-4">
                                    <label class="radio"><input type="radio" name="radio"><i></i>30 % and
                                        above</label>
                                    <label class="radio"><input type="radio" name="radio"><i></i>20 % and
                                        above</label>
                                    <label class="radio"><input type="radio" name="radio"><i></i>10 % and
                                        above</label>
                                </div>
                            </div>
                        </section>
                    </div>
                    <button class="filter-button">Sort</button>
                </div>
            </div>
            <div class="col-md-9 product-block">
                {{#if products}}
                {{#each products}}
                <div class="col-md-4 home-grid">
                    <div class="home-product-main">
                        <div class="home-product-top">
                            <a href={{this.slug}}><img src={{this.image.[0]}} alt={{this.name}}
                                    class="img-responsive zoom-img"></a>
                        </div>
                        <div class="home-product-bottom">
                            <h3 style="height: 3em; text-transform: uppercase;"><a href={{this.slug}}>{{this.name}}</a>
                            </h3>
                            <p style="color: black; font-size: 1.3em">Price: {{this.price}}$</p>
                        </div>
                        <div class="srch">
                            <span>{{this.sale}}</span>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{else}}
                <div style="text-align: center;">No product match your search :(</div>
                {{/if}}
                <div class="clearfix"> </div>
            </div>
        </div>

        {{!-- pagination --}}
        {{#if products}}
        <div class="col-md-3"></div>
        <div class="col-md-9">
            <div class="pagination col-md-12">
                <ul class="page-list">
                    <li class="page"><a href="">&lt;&lt;</a></li>
                    {{#each pages}}
                    <li class="page"><a href={{this.pageA}}>{{this.page}}</a></li>
                    {{/each}}
                    <li class="page"><a href="">&gt;&gt;</a></li>
                </ul>
            </div>

        </div>
        <div id="current-page" style="display: none;" name={{currentPage}}></div>
        {{/if}}
    </div>
</div>
<!--product end here-->